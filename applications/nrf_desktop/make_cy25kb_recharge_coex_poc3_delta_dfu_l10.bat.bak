@echo off

SETLOCAL ENABLEDELAYEDEXPANSION

:: Get start time
SET A=%TIME%


::West build
SET NAME=cy25kb_recharge_coex_poc3_delta_dfu
SET BUILD_FOLDER=cy25kb_recharge_coex_delta_dfu_l10
SET OVERLAY=cy25kb_recharge_poc3_pwm_nrf54l10

SET BOARD=nrf54l15dk/nrf54l10/cpuapp
west build -p -b %BOARD% . -t menuconfig -d build_%BUILD_FOLDER% -- -DCONF_FILE=prj_%NAME%.conf -DDTC_OVERLAY_FILE=%OVERLAY%.overlay -DFILE_SUFFIX=%NAME% 
copy build_%BUILD_FOLDER%\merged.hex hex\full
copy build_%BUILD_FOLDER%\nrf_desktop\zephyr\zephyr.signed.hex hex

:: Get end time
SET B=%TIME%

:: Get time detail
SET A_HOUR=%A:~0,2%
SET A_MINS=%A:~3,2%
SET A_SECS=%A:~6,2%
SET A_MSEC=%A:~9,2%

SET B_HOUR=%B:~0,2%
SET B_MINS=%B:~3,2%
SET B_SECS=%B:~6,2%
SET B_MSEC=%B:~9,2%

:: FOR debug
echo.
echo START TIME:%A%
echo END   TIME:%B%
:: echo %A_HOUR%:%A_MINS%:%A_SECS%.%A_MSEC%
:: echo %B_HOUR%:%B_MINS%:%B_SECS%.%B_MSEC%

:: Time
SET /A C_MSEC=B_MSEC-A_MSEC
SET /A C_SECS=B_SECS-A_SECS
SET /A C_MINS=B_MINS-A_MINS
SET /A C_HOUR=B_HOUR-A_HOUR

:: Adjust
IF %C_MSEC% LSS 0  SET /A C_MSEC+=100 & SET /A C_SECS-=1
IF %C_MSEC% LSS 10 SET C_MSEC=0%C_MSEC%

IF %C_SECS% LSS 0  SET /A C_SECS+=60  & SET /A C_MINS-=1
IF %C_SECS% LSS 10 SET C_SECS=0%C_SECS%

IF %C_MINS% LSS 0  SET /A C_MINS+=60  & SET /A C_HOUR-=1
IF %C_MINS% LSS 10 SET C_MINS=0%C_MINS%

IF %C_HOUR% LSS 0  SET /A C_HOUR+=24
IF %C_HOUR% LSS 10 SET C_HOUR=0%C_HOUR%

echo ELAPSE    :%C_HOUR%:%C_MINS%:%C_SECS%.%C_MSEC%

ENDLOCAL