/ {
  chosen {
                 ncs,dtm-uart = &uart00;
                 zephyr,console = &uart00;
                 zephyr,shell-uart = &uart00;
  };
};

&uart00 {
  status = "okay";
  current-speed = <2400>;
  pinctrl-0 = < &uart00_default >;
  pinctrl-1 = < &uart00_sleep >;
  pinctrl-names = "default", "sleep";
  /delete-property/ hw-flow-control;
};

&spi00 {
  status = "disabled";
};

&pinctrl {
 uart00_default: uart00_default {
                 group1 {
                               psels = <NRF_PSEL(UART_TX, 2, 8)>;
                 };
                 group2 {
                               psels = <NRF_PSEL(UART_RX, 2, 7)>;
                               bias-pull-up;
                 };
 };

 uart00_sleep: uart00_sleep {
                 group1 {
                               psels = <NRF_PSEL(UART_TX, 2, 8)>,
                                              <NRF_PSEL(UART_RX, 2, 7)>;
                               low-power-enable;
                 };
 };
};
